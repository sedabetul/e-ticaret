@using MVCStokUpdate
@using MVCStokUpdate.Models.Entity
@model List<TBLKATEGORILER>
@{
    ViewBag.Title = "Kategori";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<head>
    <style>
        table {
            margin-top: 80px;
            background-color: rgb(214, 162, 232);
            color: white;
        }

        body {
          
            background-image: url('../../image/pexels-content-pixie-2736499.jpg');
            background-color: rgb(214, 162, 232);
            background-attachment: fixed;
            background-size: cover;
        }
    </style>
</head>
<table class="table table-bordered">
    <caption style="color:darkred; border:2px solid Violet;">KATEGORİLER <a href="/Admin/YeniKategori" class="btn btn-primary" style="background-color: rgb(184,132,202);margin-left:920px; ">Kategori Ekle</a></caption>
    <tr>
        <th style="color:darkred">Kategori Ad:</th>


    </tr>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>
                    @a.KATEGORIAD
                    <a href="/Admin/Sil/@a.KATEGORIID/" class="btn btn-danger" style="background-color: rgb(184,132,202);float:right">Sil</a>
                    <a href="/Admin/YeniKategori?id=@a.KATEGORIID" class="btn btn-danger" style="background-color: rgb(184,132,202);float:right">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

